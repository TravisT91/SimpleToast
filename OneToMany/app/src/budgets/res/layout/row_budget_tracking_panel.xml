<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="palette"
            type="com.engageft.fis.pscu.feature.branding.Palette"/>

        <variable
            name="budgetItem"
            type="com.engageft.feature.budgets.recyclerview.BudgetItem"/>

        <variable
            name="budgetConstants"
            type="com.engageft.feature.budgets.BudgetConstants"/>
    </data>

    <com.engageft.apptoolbox.view.TrackingPanel
        android:id="@+id/row_budget_tracking_panel"
        style="@style/TrackingPanelBudgetRow"
        app:titleText="@{budgetItem.title}"
        app:rightSubtitle="@{budgetItem.spentString}"
        app:rightSubtitleColor="@{budgetItem.spentStringColor}"
        app:progress="@{budgetItem.progress}"
        app:progressColor="@{budgetItem.progressColor}"
        app:progressBarHeight="@{budgetItem.progressBarHeight}"
        app:indicatorPosition="@{budgetItem.fractionTimePeriodPassed}"
        app:indicatorText="@string/budget_row_today"
        app:showIndicatorText="@{budgetItem.categoryName == budgetConstants.CATEGORY_NAME_FE_TOTAL_SPENDING}"/>

</layout>
