<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OverviewCardItemTextView" parent="Body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/structure6</item>
    </style>

    <style name="OverviewBalanceAmountTextView" parent="LargeTitleQuiet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">@dimen/overview_balance_amount_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/overview_balance_amount_margin_top_bottom</item>
        <item name="android:layout_marginEnd">@dimen/overview_balance_amount_margin_start_end</item>
        <item name="android:layout_marginBottom">@dimen/overview_balance_amount_margin_top_bottom</item>
        <item name="android:textColor">@color/structure6</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">38sp</item>
        <item name="autoSizeMinTextSize">24sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="OverviewBalanceLabelTextView" parent="Body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/overview_balance_label_margin_top</item>
        <item name="android:textColor">@color/structure5</item>
    </style>

    <style name="OverviewTransactionsTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">@dimen/transactions_tab_indicator_height</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="android:background">@color/structure1</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/structure6</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle" parent="BodyLoud">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OverviewMoreOptionsBottomSheetDialogFragmentTitleStyle" parent="Body">
        <item name="android:textColor">@color/structure5</item>
    </style>

    <style name="OverviewMoreOptionsBottomSheetDialogFragmentStyle" parent="BaseListOptionsBottomSheetDialogFragmentStyle">
        <item name="listOptionItemTextAppearance">@style/ListOptionsBottomSheetDialogFragmentOptionStyle</item>
        <item name="listOptionTitleTextAppearance">@style/OverviewMoreOptionsBottomSheetDialogFragmentTitleStyle</item>
        <item name="listOptionSubtitleTextAppearance">@style/ListOptionsBottomSheetDialogFragmentSubtitleStyle</item>
        <item name="listOptionBackground">@drawable/dialog_bottom_sheet_option_selector</item>
        <item name="listOptionHeaderMarginTop">20dp</item>
        <item name="listOptionHeaderMarginBottom">12dp</item>
        <item name="listOptionHeaderMarginStart">16dp</item>
        <item name="listOptionHeaderMarginEnd">16dp</item>
        <item name="listOptionHeaderTitleSubtitleMargin">9dp</item>
        <item name="listOptionItemPadding">13dp</item>
        <item name="listOptionMarginBottom">15dp</item>
    </style>
</resources>