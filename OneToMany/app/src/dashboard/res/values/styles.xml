<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DashboardCardItemTextView" parent="Body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/structure6</item>
    </style>

    <style name="DashboardBalanceAmountTextView" parent="LargeTitleQuiet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">@dimen/dashboard_balance_amount_margin_start_end</item>
        <item name="android:paddingTop">@dimen/dashboard_balance_amount_margin_top</item>
        <item name="android:paddingEnd">@dimen/dashboard_balance_amount_margin_start_end</item>
\        <item name="android:textColor">@color/structure6</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">38sp</item>
        <item name="autoSizeMinTextSize">24sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="DashboardBalanceLabelTextView" parent="Body">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
\        <item name="android:paddingBottom">@dimen/dashboard_balance_label_margin_bottom</item>
        <item name="android:textColor">@color/structure5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DashboardTransactionsTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">@dimen/transactions_tab_indicator_height</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="android:background">@color/structure1</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/structure6</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle" parent="BodyLoud">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DashboardMoreOptionsBottomSheetDialogFragmentTitleStyle" parent="Body">
        <item name="android:textColor">@color/structure5</item>
    </style>

    <style name="DashboardMoreOptionsBottomSheetDialogFragmentStyle" parent="BaseListOptionsBottomSheetDialogFragmentStyle">
        <item name="listOptionItemTextAppearance">@style/ListOptionsBottomSheetDialogFragmentOptionStyle</item>
        <item name="listOptionTitleTextAppearance">@style/DashboardMoreOptionsBottomSheetDialogFragmentTitleStyle</item>
        <item name="listOptionSubtitleTextAppearance">@style/ListOptionsBottomSheetDialogFragmentSubtitleStyle</item>
        <item name="listOptionForeground">@drawable/selectable_item_background_structure2</item>
        <item name="listOptionHeaderMarginTop">20dp</item>
        <item name="listOptionHeaderMarginBottom">12dp</item>
        <item name="listOptionHeaderMarginStart">16dp</item>
        <item name="listOptionHeaderMarginEnd">16dp</item>
        <item name="listOptionHeaderTitleSubtitleMargin">9dp</item>
        <item name="listOptionItemPadding">13dp</item>
        <item name="listOptionMarginBottom">15dp</item>
    </style>
</resources>