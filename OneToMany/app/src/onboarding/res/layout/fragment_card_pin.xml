<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.engageft.fis.pscu.feature.CardPINViewModel"/>
        <variable
            name="palette"
            type="com.engageft.fis.pscu.feature.Palette"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.engageft.apptoolbox.view.ProductCardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="8dp"
            app:cardBackground="@drawable/card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!--TODO: use palette -->
        <TextView
            android:id="@+id/chooseDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/card_pin_choose_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconImageView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/ic_card_pin_dot"
            app:layout_constraintEnd_toStartOf="@+id/iconImageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chooseDescriptionTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconImageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/ic_card_pin_dot"
            app:layout_constraintEnd_toStartOf="@+id/iconImageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iconImageView1"
            app:layout_constraintTop_toBottomOf="@id/chooseDescriptionTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconImageView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/ic_card_pin_dot"
            app:layout_constraintEnd_toStartOf="@+id/iconImageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iconImageView2"
            app:layout_constraintTop_toBottomOf="@id/chooseDescriptionTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconImageView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_card_pin_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iconImageView3"
            app:layout_constraintTop_toBottomOf="@id/chooseDescriptionTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
