<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EnrollmentPlaceholderCardnumberTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_regular</item>
    </style>
    <style name="EnrollmentPlaceholderCardLabelTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_italic</item>
    </style>

    <style name="CircularProgressBar">
        <item name="progressBarProgressColor">@color/secondary</item>
        <item name="progressBarBackgroundColor">@color/structure3</item>
        <item name="progressDrawables">@drawable/ic_progress_ring</item>
        <item name="innerDrawable">@drawable/ic_check</item>
        <item name="showInnerDrawable">true</item>
    </style>
