<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_with_navigation_graph"
    app:startDestination="@id/dashboard_fragment">

    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="com.engageft.feature.DashboardFragment"
        android:label="@string/fragment_title_dashboard"
        tools:layout="@layout/fragment_dashboard"/>
    <fragment
        android:id="@+id/budgets_fragment"
        android:name="com.engageft.feature.BudgetsFragment"
        android:label="@string/fragment_title_budgets"
        tools:layout="@layout/fragment_budgets">
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/goals_fragment"
        android:name="com.engageft.feature.GoalsFragment"
        android:label="@string/fragment_title_goals"
        tools:layout="@layout/fragment_goals">
        <action
            android:id="@+id/action_goals_fragment_to_goalAdd1Fragment"
            app:destination="@id/goalAdd1Fragment" />
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/account_fragment"
        android:name="com.engageft.feature.SettingsFragment"
        android:label="@string/fragment_title_account"
        tools:layout="@layout/fragment_account">
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/goalAdd1Fragment"
        android:name="com.engageft.feature.GoalAdd1Fragment"
        android:label="@string/fragment_title_goals_add_step_1"
        tools:layout="@layout/fragment_goal_add_1" >
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/cardManagementFragment"
        android:name="com.engageft.feature.CardManagementFragment"
        android:label="@string/fragment_title_cardmanagement">
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.engageft.feature.HelpFragment"
        android:label="@string/fragment_title_help">
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
    </fragment>

</navigation>