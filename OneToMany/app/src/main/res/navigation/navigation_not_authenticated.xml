<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/get_started_fragment">

    <fragment
        android:id="@+id/get_started_fragment"
        android:name="com.engageft.onetomany.GetStartedFragment"
        android:label="Get Started Fragment"
        tools:layout="@layout/fragment_get_started">
        <action
            android:id="@+id/action_get_started_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_get_started_fragment_to_sign_up_1_fragment"
            app:destination="@id/sign_up_1_fragment" />
        <argument
            android:name="@string/navigation_override_up"
            android:defaultValue="true" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.engageft.feature.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_fragment_to_authenticatedActivity"
            app:destination="@id/authenticatedActivity" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_1_fragment"
        android:name="com.engageft.onetomany.SignUp1Fragment"
        android:label="Sign Up Step 1"
        tools:layout="@layout/fragment_sign_up_1">
        <action
            android:id="@+id/action_sign_up_1_fragment_to_sign_up_2_fragment"
            app:destination="@id/sign_up_2_fragment" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_2_fragment"
        android:name="com.engageft.onetomany.SignUp2Fragment"
        android:label="Sign Up Step 2"
        tools:layout="@layout/fragment_sign_up_2">
        <action
            android:id="@+id/action_sign_up_2_fragment_to_sign_up_3_fragment"
            app:destination="@id/sign_up_3_fragment" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_3_fragment"
        android:name="com.engageft.onetomany.SignUp3Fragment"
        android:label="Sign Up Step 3"
        tools:layout="@layout/fragment_sign_up_3">
        <action
            android:id="@+id/action_sign_up_3_fragment_to_login_fragment"
            app:destination="@id/login_fragment"
            app:popUpTo="@+id/get_started_fragment" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>
    <activity
        android:id="@+id/authenticatedActivity"
        android:name="com.engageft.onetomany.AuthenticatedActivity"
        android:label="ActivityWithNavigation" />
</navigation>