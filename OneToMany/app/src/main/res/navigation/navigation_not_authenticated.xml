<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.engageft.feature.SplashFragment"
        android:label="Splash Fragment"
        tools:layout="@layout/fragment_splash">
        <argument
            android:name="@string/navigation_hide_toolbar"
            android:defaultValue="true" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
        <action
            android:id="@+id/action_splash_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_splash_fragment_to_authenticatedActivity"
            app:destination="@id/authenticatedActivity" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.engageft.feature.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_fragment_to_authenticatedActivity"
            app:destination="@id/authenticatedActivity" />
        <argument
            android:name="@string/navigation_view_gone"
            android:defaultValue="true" />
    </fragment>

    <activity
        android:id="@+id/authenticatedActivity"
        android:name="com.engageft.onetomany.AuthenticatedActivity"
        android:label="ActivityWithNavigation" />
</navigation>