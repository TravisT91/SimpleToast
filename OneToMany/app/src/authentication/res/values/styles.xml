<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Authentication Dialog Style -->
    <style name="DialogAuthenticationStyle">
        <item name="buttonNegativeTextAppearance">@style/DialogInformationButtonNegativeTextAppearance</item>
        <item name="buttonNeutralTextAppearance">@style/DialogInformationButtonNeutralTextAppearance</item>
        <item name="buttonPositiveTextAppearance">@style/DialogInformationButtonPositiveTextAppearance</item>
        <item name="buttonBackground">@drawable/dialog_info_button_background</item>
        <item name="titleTextAppearance">@style/DialogInformationTitleTextAppearance</item>
        <item name="messageTextAppearance">@style/DialogInformationMessageTextAppearance</item>
        <item name="messageLineSpacing">@dimen/dialogInfoMessageLineSpacing</item>
        <item name="errorMessageTextAppearance">@style/InputWithLabelErrorTextAppearance</item>
    </style>

    <style name="DialogAuthenticationWidthStyle" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">

    </style>

    <style name="AuthExpiredPasswordInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="showHideIconTint">@color/white</item>
        <item name="helperTextAppearance">@style/AuthExpiredHelperTextAppearance</item>
        <item name="errorTextAppearance">@style/AuthExpiredErrorTextAppearance</item>
        <item name="inputTextAppearance">@style/AuthExpiredInputTextAppearance</item>
        <item name="labelTextAppearance">@style/AuthExpiredLabelTextAppearance</item>
        <item name="lineTint">@color/white</item>
        <item name="android:textColorHint">@color/structure3</item>
        <item name="labelAndInputTypeface">@font/font_regular</item>
    </style>

    <style name="AuthExpiredInputTextAppearance" parent="Body">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AuthExpiredErrorTextAppearance" parent="Caption1">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="AuthExpiredHelperTextAppearance" parent="Caption1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AuthExpiredLabelTextAppearance" parent="Caption1">
        <item name="android:textColor">@color/structure3</item>
    </style>
    <!-- End of Authentication Dialog Style -->
</resources>